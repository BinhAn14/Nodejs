<%- include('layouts/header'); %>

    <main class="container mt-5">
        <h1 class="text-center mb-4">
            <a href="/user" class="text-decoration-none text-dark">User Management</a>
        </h1>


        <div class="text-end mb-4">
            <a href="/user/new" class="btn btn-success">Create New User</a>
        </div>


        <div class="container mb-4">
            <form class="input-group" method="GET" action="/user">
                <input type="search" name="q" value="<%= typeof q !== 'undefined' ? q : '' %>" class="form-control rounded" placeholder="Search by name or email" aria-label="Search" aria-describedby="search-addon" />
                <button type="submit" class="btn btn-outline-primary">Search</button>
            </form>
        </div>


        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark text-center">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Age</th>
                        <th scope="col">Role</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(function(user, index) { %>
                        <tr class="text-center">
                            <th scope="row">
                                <%= index + 1 %>
                            </th>
                            <td>
                                <%= user.name %>
                            </td>
                            <td>
                                <%= user.email %>
                            </td>
                            <td>
                                <%= user.age %>
                            </td>
                            <td>
                                <%= user.role %>
                            </td>
                            <td class="d-flex justify-content-center">

                                <a href="/user/edit/<%= user._id %>" class="btn btn-primary btn-sm me-2">Edit</a>


                                <form method="POST" action="/user/delete/<%= user._id %>" class="d-inline">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </main>

    <%- include('layouts/footer'); %>