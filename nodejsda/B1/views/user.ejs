<%- include('layouts/header'); %>

    <main class="container mt-5">
        <h1 class="text-center mb-4">
            <a href="/user" class="text-decoration-none text-dark">User Management</a>
        </h1>
        <div class="mb-4 text-end">
            <a href="/user/new" class="btn btn-success">Create New User</a>
        </div>

        <!-- Search Input -->
        <div class="container">
            <form class="input-group mb-4" method="GET" action="/user">
                <input type="search" value="<%=q %>" name="q" class="form-control rounded" placeholder="Search name or email" aria-label="Search" aria-describedby="search-addon" value="<%= typeof q !== 'undefined' ? q : '' %>" <!-- Giữ lại giá trị tìm kiếm sau khi submit
                    --> >
                <button type="submit" class="btn btn-outline-primary">Search</button>
            </form>
        </div>

        <!-- User Table -->
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Age</th>
                    <th scope="col">Role</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(function(user, index) { %>
                    <tr>
                        <th scope="row">
                            <%= index + 1 %>
                        </th>
                        <td>
                            <%= user.name %>
                        </td>
                        <td>
                            <%= user.email %>
                        </td>
                        <td>
                            <%= user.age %>
                        </td>
                        <td>
                            <%= user.role %>
                        </td>
                        <td>
                            <a href="/user/edit/<%= user._id %>" class="btn btn-sm btn-primary">Edit</a>

                            <form method="POST" action="/user/delete/<%= user.id %>">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                            </a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </main>

    <%- include('layouts/footer'); %>